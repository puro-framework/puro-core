{
  "name": "@puro/core",
  "version": "0.1.0-alpha20",
  "description": "Puro REST Framework",
  "license": "MIT",
  "author": {
    "name": "Giacomo Trudu aka Wicker25",
    "email": "wicker25@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/puro-framework/puro-core.git"
  },
  "engines": {
    "node": "12"
  },
  "scripts": {
    "build": "tsc -p .",
    "prettify": "prettier --single-quote --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "jest",
    "release": "yarn clean && yarn build && ./scripts/publish.sh",
    "clean": "rm -Rf lib/ coverage/",
    "coveralls": "coveralls"
  },
  "jest": {
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/testing/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn build && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettify"
    ]
  },
  "dependencies": {
    "express": "4.17.3",
    "lodash": "4.17.15",
    "passport": "0.4.1",
    "passport-jwt": "^4.0.0",
    "typeorm": "0.2.25",
    "typescript": "3.9.5",
    "validator": "13.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.0",
    "@types/jest": "25.2.3",
    "@types/lodash": "4.14.155",
    "@types/node": "12.12.6",
    "@types/passport": "1.0.3",
    "@types/passport-jwt": "3.0.3",
    "@types/validator": "^13.0.0",
    "coveralls": "3.1.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5",
    "reflect-metadata": "0.1.13",
    "ts-jest": "26.1.0"
  }
}
